            android:textSize="34sp" />

        <TextView
            android:id="@+id/resultheight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#673AB7"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultname9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:text="Activity Level"
            android:textColor="#673AB7"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/activitylevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#673AB7"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:id="@+id/resultname11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60DACE"
        android:text="Results:"
        android:textColor="#673AB7"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultname12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:text="BMR:"
            android:textColor="#673AB7"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/resultBMR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#673AB7"
            android:textSize="34sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultname14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:text="Daily needs based on activity level:"
            android:textColor="#673AB7"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/caloryneed"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
